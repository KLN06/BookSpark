@{
}
@model IEnumerable<GenreViewModel>
<h2>Genres</h2>

<table class="table">
    <thead>
            @if (Model != null)
            {
            <tr>
                <th>Genre</th>
                <th>Id</th>
            </tr>
                @foreach (var genre in Model)
                {
                    <tr>
                    <th>@genre.Name</th>
                    <th>@genre.Id</th>
                    <th>
                        <button>
                            <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id">Edit</a>
                        </button>
                        <button>
                            <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id">Delete</a>
                        </button>
                    </th>
                    </tr>
                }
            }
            else
            {
                <h1>There are no genres yet!</h1>
            }
    </thead>

</table> 
