@{
}

@model BookViewModel
<style>
    #backtobooks{
        text-align: center;
        background-color: white;
        border-radius: 20px;
    }
</style>
<div class="container">

    <a id="backtobooks" class="boton nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Back to books</a>

    <h1 class="my-4"> @Model.Title</h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src=@Model.ImageLink alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Description</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Details</h3>
            <ul>
                <li>Genre:</li>
                <p class="card-text">@Model.Genre.Name</p>
                <li>Author:</li>
                <p class="card-text">@Model.Author.Name</p>
                <li>Published year:</li>
                <p class="card-text">@Model.PublishedYear</p>
            </ul>
        </div>

    </div>

</div>
