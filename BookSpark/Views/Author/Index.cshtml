@using BookSpark.Data.Entities
@using BookSpark.Models.AuthorViewModels
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model IEnumerable<AuthorViewModel>
<h2>Authors</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Birthdate</th>
            <th>Biography</th>
            <th>Books</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <th>@author.Id</th>
                <th>@author.Name</th>
                <th>@author.Birthdate</th>
                <th>@author.Biography</th>
                @if (author.Books is not null)
                {
                    @foreach (var book in author.Books)
                    {
                        <th>@book.Title</th>
                    }
                }
                @if (author.Books is null)
                {
                    <th>No available books by @author.Name</th>
                }
                <th>
                    <button>
                        <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">Edit</a>
                    </button>
                    <button>
                        <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id">Delete</a>
                    </button>
                </th>
            </tr>
            }
    </tbody>
</table>

<a asp-controller="Author" asp-action="Add" class="btn btn-primary">Add author</a>