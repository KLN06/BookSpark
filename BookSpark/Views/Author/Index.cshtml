@{
}
@model IEnumerable<AuthorViewModel>
<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birthdate</th>
            <th>Books</th>
            <th>Biography</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.Name</th>
                <th>@product.Birthdate</th>
                <th>@product.Include()</th>
                <th>
                    <button>
                        <a asp-controller="Product"
                           asp-action="Edit"
                           asp-route-id="@product.Id">
                            Edit
                        </a>
                    </button>
                    <button>
                        <a asp-controller="Product"
                           asp-action="Delete"
                           asp-route-id="@product.Id">
                            Delete
                        </a>
                    </button>
                </th>
            </tr>
        }
    </tbody>
</table> 