@{
}
@model IEnumerable<AuthorViewModel>
<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birthdate</th>
            <th>Books</th>
            <th>Biography</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <th>@author.Name</th>
                <th>@author.Birthdate</th>
                <th>@author.Biography</th>
            </tr>
        }
    </tbody>
</table> 