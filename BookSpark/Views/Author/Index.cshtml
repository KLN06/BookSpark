@{
}
@model IEnumerable<AuthorViewModel>

<h2>Authors</h2>

<table class="table">
    <thead>
        @if (Model != null)
        {
            <tr>
                <th>Name</th>
                <th>Birthdate</th>
                <th>Biography</th>
            </tr>
            @foreach (var author in Model)
            {
                <tr>
                    <th>@author.Name</th>
                    <th>@author.Birthdate</th>
                    <th>@author.Biography</th>
                </tr>
            }
        }
        else
        {
            <h1>There are no authors yet!</h1>
        }
    </thead>

</table> 