<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookSpark</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookSpark.styles.css" asp-append-version="true" />

    <style>
        body, main{
            background-color: #737373;
        }
        #footer{
            background-color:white;
        }
        #nabar{
            box-shadow: 0 15px 30px 10px rgba(0, 0, 0, 0.5);
        }
        .boton{
            border-radius: 10px;
            transition: all 0.3s ease;
        }
        .boton:hover{
                transform: scale(1.1);
            box-shadow: 0 15px 30px 10px rgba(0, 0, 0, 0.5);
        }
        }
    </style>
</head>
<body>
    <header>
        <nav id="nabar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookSpark</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Books catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Wishlist" asp-action="Index">My wishlist</a>
                        </li>
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Author" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Genre" asp-action="Index">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Genre" asp-action="Add">Add genre</a>
                        </li>
                        <li class="nav-item">
                            <a class="boton nav-link text-dark" asp-area="" asp-controller="Author" asp-action="Add">Add author</a>
                        </li>

                    </ul>
                </div>
            </div>

            @* <form asp-area="" asp-controller="User" asp-action="SetRole" method="post">
                <div class="form-floating mb-3">
                    <input id="adminkey" name="adminKey" class="form-control" autocomplete="off" aria-required="true" placeholder="Admin Key" />
                    <label for="adminkey">Admin Key</label>
                    //<span asp-validation-for="adminKey" class="text-danger"></span>//
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form> *@
            <partial name = "_LoginPartial" />
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer id="footer1" class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookSpark - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
